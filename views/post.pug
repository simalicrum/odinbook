mixin post(postarg, postlist)
  div.space-y-5.p-8
    div
      p.text-md.text-gray-800.font-semibold #{postarg.author.first_name} #{postarg.author.last_name}
      p.span.text-gray-500.text-sm #{postarg.timestamp_formatted}
    p.text-md.text-gray-500 #{postarg.content}
    p.text-sm
      if postlist
        if postarg.comments.length === 0
          a.text-gray-500(href="/posts/" + postarg._id + "#comments") No comments
        else
          a.text-gray-500(href="/posts/" + postarg._id + "#comments") #{postarg.comments.length} comments
