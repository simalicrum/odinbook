mixin request(requestarg)
  div.flex.p-4.flex-col.items-center.space-y-2(class="sm:flex-row sm:justify-between")
    div.flex.items-center
      a(href="/users/" + requestarg._id)
        div(style="background-image: url('/images/profile/" + requestarg.picture + "');").h-20.w-20.bg-yellow-400.rounded.bg-cover
      div.ml-4
        a(href="/users/" + requestarg._id).text-md.text-gray-800.font-semibold #{requestarg.first_name} #{requestarg.last_name}
    form(method="POST" action="").flex.items-center
      input(type='hidden',name='requestid', required='true', value=requestarg._id )
      button.bg-yellow-500.text-white.rounded-md(type="submit" class="py-2.5 sm:px-6").w-64 Accept friend request