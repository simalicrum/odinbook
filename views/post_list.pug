extends layout

include ./header.pug
include ./post.pug

block content
  +header
  div.container.max-w-screen-md.mx-auto
    if user
      if user.status === "author"
        a.bg-green-400.text-white.text-center.rounded-md.m-8.block.flex.items-center.justify-center(href="/posts/new" class="py-2.5")
          svg.inline(height="20" width="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor")
            path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd")
          span.ml-2 Add a blog post
    div
      ul
        if post_list
          each post in post_list
            li
              +post(post, true)