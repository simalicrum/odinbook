extends layout

block content
  div.h-screen.w-screen.bg-yellow-500.flex.items-center.justify-center.flex-col
    form.container.bg-white.mx-auto.p-6.grid.grid-cols-1.gap-3.self-center(class="sm:max-w-lg sm:shadow-lg sm:rounded-lg" method="POST" action="")
      h2.text-gray-900.font-semibold Create an account
      label.block
        span.text-gray-700.text-sm First Name
        input(type="text" name="firstname" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      label.block
        span.text-gray-700.text-sm Last Name
        input(type="text" name="lastname" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      label.block
        span.text-gray-700.text-sm Location
        input(type="text" name="location" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      label.block
        span.text-gray-700.text-sm Date of Birth
        input(type="date" name="dob" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      label.block
        span.text-gray-700.text-sm User name
        input(type="text" name="username" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      label.block
        span.text-gray-700.text-sm Password
        input(type="password" name="password" class="mt-1 block w-full rounded-md bg-gray-200 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0")
      button.bg-yellow-400.text-white.rounded-md.mt-1(type="submit" class="py-2.5") Signup
      if errors
        ul
          each error in errors
            li.text-red-700.text-sm.flex.items-center
              svg.inline(xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 20 20" fill="currentColor")
                path(fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd")
              span.ml-2 #{error.msg}
    div.m-4
      a.text-white.text-sm(href="/") Home 
      span.text-yellow-400.text-sm.m-1 Â· 
      a.text-white.text-sm(href="/login") Login
